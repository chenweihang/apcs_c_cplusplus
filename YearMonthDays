#include <stdio.h>
#include<iostream>
using namespace std;

int main()
{
    int y,m;
    printf("請輸入需判斷的Year（整數）");
    scanf("%d",&y);
    
    printf("請輸入需判斷的Ｍonth（1-12）");
    scanf("%d",&m);
   
    if(y%4 == 0){
        if (m == 2)
        printf("day = 28");
        
    else if ((m==4) || (m==6) || (m==9) || (m==11))
        printf("day = 30");
    else if ((m==1) || (m==3) || (m==5) || (m==7)|| (m==8)|| (m==10)|| (m==12))
        printf("day = 31");
    else 
        printf("Please input 1-12 \n");

        
    cout<<"";
    return 0;

    }
    
    if(y%4 != 0){
        if (m == 2)
        printf("day = 29");
        
    else if ((m==4) || (m==6) || (m==9) || (m==11))
        printf("day = 30");
    else if ((m==1) || (m==3) || (m==5) || (m==7)|| (m==8)|| (m==10)|| (m==12))
        printf("day = 31");
    else 
        printf("Please input 1-12 \n");

        
    cout<<"";
    return 0;

    }
}
